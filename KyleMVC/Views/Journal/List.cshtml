@model IEnumerable<KyleMVC.Models.JournalModels>

@{
    ViewBag.Title = "List";
}

<h2>List</h2>

<div>
    <h4>Your Journals</h4>
    <hr />

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th></th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <div class="test">@Html.DisplayFor(modelItem => item.Title)</div>
                    <br />
                    @Html.DisplayFor(modelItem => item.UsrText)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { journalDate = item.Date, user = item.UserID }) |
                    @Html.ActionLink("update", "update", "Journal", new { journalDate = item.Date, user = item.UserID }, null) |
                    @Html.ActionLink("Delete", "Delete", "Journal", new { id = item.UserID, date = item.Date }, null) |
                </td>
            </tr>
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Date)</td>
            </tr>
        }

    </table>
</div>

<a class="btn btn-default" href="@Url.Action("Editor",
                                "Journal")">New Journal</a>
<p>
    @Html.ActionLink("<-- Back to List", "Index", "Home")
</p>
